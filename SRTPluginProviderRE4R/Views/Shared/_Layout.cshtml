@using Microsoft.AspNetCore.Components.Web
@using NamespaceAlias = SRTPluginProducerRE4R
@namespace NamespaceAlias.Views.Shared
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | RE4R</title>
    <base href="~/" />
    <link href="css/site.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    backgroundImage: {
                        re4: "url('/SRTPluginProducerRE4R/wwwroot//images/background.jpeg')",
                    }
                }
            }
        }
    </script>
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body class="absolute w-full h-screen text-white">
    <div class="fixed w-full h-full bg-re4 bg-cover bg-center bg-no-repeat flex flex-col overflow-y-auto">
        <main class="mx-auto sm:container z-10 w-full h-full flex flex-col gap-2 justify-start items-center opacity-80" role="main">
            <nav class="z-50 w-full flex justify-between items-center py-2 px-4">
                <div class="text-xl font-bold text-center">RE4R @ViewData["Title"]</div>
                <a class="flex justify-center items-center gap-2 bg-red-500 hover:bg-red-300 p-2 rounded-md" href="/">
                    <span class="sm:block hidden">
                        Return Home
                    </span>
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M18.75 19.5l-7.5-7.5 7.5-7.5m-6 15L5.25 12l7.5-7.5" />
                    </svg>
                </a>
            </nav>
            @RenderBody()
        </main>
    </div>
    <script src="_framework/blazor.server.js"></script>
</body>
</html>
